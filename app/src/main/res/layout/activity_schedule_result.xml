<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.example.mario.techinicianscheduler.Manager.ScheduleResult"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/quit"
            android:id="@+id/backDashboard"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myBlack"
            android:text="Preview Result"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            />


        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/list"
            android:id="@+id/switchView"
            android:layout_marginLeft="85dp"
            />


    </LinearLayout>

    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:textColor="@color/myBlack"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:id="@+id/editScheduleResult"
        android:background="@drawable/textview_bg"
        android:inputType="textMultiLine"
        android:gravity="start"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:id="@+id/editedResultList"
        >

    </ListView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:id="@+id/confirmResult"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textSize="20dp"
        />




