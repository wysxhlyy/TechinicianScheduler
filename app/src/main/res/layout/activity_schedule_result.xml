<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mario.techinicianscheduler.Manager.ScheduleResult"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="4dp"
        android:id="@+id/rl_schedule_head"
        >


        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/quit"
            android:id="@+id/backDashboard"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myBlack"
            android:text="Preview Result"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            />


        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/list"
            android:id="@+id/switchView"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/myBlack"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:id="@+id/editScheduleResult"
        android:background="@drawable/textview_bg"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:layout_above="@+id/confirmResult"
        android:layout_below="@id/rl_schedule_head"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/editedResultList"
        android:layout_above="@+id/confirmResult"
        android:layout_below="@id/rl_schedule_head"
        >
    </ListView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:id="@+id/confirmResult"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />




